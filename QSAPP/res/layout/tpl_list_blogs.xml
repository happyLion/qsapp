<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:focusable="false"
	>
	<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:focusable="false"
		>

		<ImageView
			android:id="@+id/tpl_list_blog_text_picture"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="1dip"
			android:focusable="false"
			android:scaleType="centerCrop"
			/>
		
		<TextView android:id="@+id/tpl_list_blog_text_content"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="top" android:paddingBottom="5dip"
			android:paddingLeft="12dip" android:paddingRight="10dip"
			android:focusable="false" android:text=""
			android:textSize="12dip" android:layout_weight="1"/>


		<TextView
			android:id="@+id/background_pine"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_centerVertical="true"
			android:background="#7fE56690"
			android:visibility="gone"
			android:gravity="center"
			/>
		<ImageView
			android:id="@+id/circle"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_centerVertical="true"
			android:src="@drawable/circle"
			android:layout_centerHorizontal="true"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/number"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_centerVertical="true"
			android:text=" 1"
			android:textSize="55sp"
			android:layout_centerHorizontal="true"
			android:visibility="gone"
			android:gravity="center"
			/>
		<ImageView
			android:id="@+id/circle_left"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:src="@drawable/circle"
			android:layout_toLeftOf="@+id/circle"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/circle_left_date"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/circle"
			android:text="今天"
			android:textSize="20sp"
			android:gravity="center"
			android:visibility="gone"
			/>
		<ImageView
			android:id="@+id/circle_right"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:src="@drawable/circle"
			android:layout_toRightOf="@+id/circle"
			android:visibility="gone"
			/>
		<TextView
			android:id="@+id/circle_right_time"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/circle"
			android:text="00:00"
			android:textSize="20sp"
			android:gravity="center"
			android:visibility="gone"
			/>
		
		
		
		
		

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="2dp">
			<TextView android:id="@+id/tpl_list_blog_text_uptime"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="12dip" android:paddingRight="10dip"
				android:focusable="false" android:text=""
				android:textSize="10dip"/>
			<TextView android:id="@+id/tpl_list_blog_text_comment"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" android:gravity="right"
				android:paddingLeft="12dip" android:paddingRight="10dip"
				android:focusable="false" android:text=""
				android:textSize="10dip"/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>