<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="51dip">
	<LinearLayout
	    android:id="@+id/main_tab_layout1"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#303537"
		android:orientation="vertical"
		android:clickable="true"
		>
	  <ImageButton
		android:id="@+id/main_tab_1"
		  android:layout_width="30dp"
		  android:layout_height="25dp"
		  android:src="@drawable/yanjingsmall"
		android:layout_gravity="center_horizontal"
		 
		 android:layout_marginTop="5dp"
		android:background="#303537"/>
		<TextView
			android:layout_width="66dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="监控情况"
			android:textSize="10sp"
			android:textColor="#cfcfcf"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="2dp"/>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/main_tab_layout2"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#303537"
		android:orientation="vertical"
		android:clickable="true"
		>
	  <ImageButton
		android:id="@+id/main_tab_3"
		  android:layout_width="25dp"
		  android:layout_height="25dp"
		  android:src="@drawable/shezhi25"
		android:layout_gravity="center_horizontal"
		 android:layout_marginTop="5dp"
		android:background="#303537"/>
		<TextView
			android:layout_width="66dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="设置"
			android:textSize="10sp"
			android:textColor="#cfcfcf"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="2dp"/>
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/main_tab_layout3"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="#303537"
		android:orientation="vertical"
		android:clickable="true"
       >
	 <ImageButton
		android:id="@+id/main_tab_4" 
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:src="@drawable/recordvideo1"
		android:layout_gravity="center_horizontal"
		 android:layout_marginTop="5dp"
		android:background="#303537" />
		<TextView
			android:layout_width="66dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center"
			android:text="开始监控"
			android:textSize="10sp"
			android:textColor="#cfcfcf"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="2dp"
			/>
	</LinearLayout>
</LinearLayout>