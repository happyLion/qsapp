<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/camera_activity_titlebar_fps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fps:" />
    <TextView
        android:id="@+id/camera_activity_titlebar_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />
    <TextView
        android:id="@+id/camera_activity_titlebar_mov_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异动数值:" />
    <TextView
        android:id="@+id/camera_activity_titlebar_mov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/camera_activity_titlebar_thresh_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抓拍门限:" />
    <TextView
        android:id="@+id/camera_activity_titlebar_thresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />
    <TextView
        android:id="@+id/camera_activity_titlebar_uploadfreq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抓拍间隔(秒):" />
     <TextView
        android:id="@+id/camera_activity_titlebar_uploadfreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />
     <TextView
        android:id="@+id/camera_activity_titlebar_uploading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>